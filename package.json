{
  "name": "@robzzson/silhouette",
  "version": "0.0.2",
  "description": "JavaScript implementation of Silhouette Coefficient used for the evaluation of clustering quality",
  "main": "silhouette.js",
  "module": "src/silhouette.js",
  "files": [
    "src",
    "silhouette.js"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "npm run check && npm run lint && npm run unit-test",
    "unit-test": "jest",
    "unit-test-cov": "jest --coverage",
    "lint": "eslint src",
    "format": "prettier --write \"{src,__{tests,mocks}__}/**/*.js\"",
    "check": "prettier --check \"{src,__{tests,mocks}__}/**/*.js\""
  },
  "dependencies": {
    "ml-distance-euclidean": "^2.0.0",
    "ml-distance-matrix": "^2.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.4",
    "@types/jest": "^26.0.3",
    "babel-plugin-rewire": "^1.2.0",
    "eslint": "^7.3.1",
    "jest": "^26.1.0",
    "jest-matcher-deep-close-to": "^2.0.1",
    "prettier": "^2.0.5",
    "rollup": "^2.18.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robzzson/silhouette-coefficient.git"
  },
  "keywords": [
    "silhouette",
    "coefficient",
    "cluster",
    "quality"
  ],
  "author": "Robert Grodecki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Robzzson/silhouette-coefficient/issues"
  },
  "homepage": "https://github.com/Robzzson/silhouette-coefficient#readme"
